<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/alertdialog_text"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:hint="입력하세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/alertdialog_cButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="No"
        app:layout_constraintEnd_toStartOf="@+id/alertdialog_eButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertdialog_text" />

    <Button
        android:id="@+id/alertdialog_eButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Yes"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alertdialog_cButton"
        app:layout_constraintTop_toBottomOf="@id/alertdialog_text" />

</androidx.constraintlayout.widget.ConstraintLayout>